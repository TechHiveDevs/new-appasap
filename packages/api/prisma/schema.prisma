datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Supplier {
  id Int @id @default(autoincrement())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt  @default(now())
  name String?
  companyRegistrationCode String?
  companyRegisterationCountry String?
  isDisabled Boolean?
  subSuppliers Supplier[]  @relation("SupplierHasOneSupplier")
  parentId Int @unique
  serviceType ServiceType  @default(EVIECARESUBSUPPLIER)
  parent Supplier  @relation("SupplierHasOneSupplier",fields: [parentId], references: [id])
}

enum ServiceType {
  EVIECARESUBSUPPLIER
  INTERNALSUBSUPPLIER
  PARENTSUPPLIER
}